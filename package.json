{
  "name": "theia-lebab-plugin",
  "publisher": "unibtc",
  "keywords": [
    "theia-plugin"
  ],
  "version": "0.0.1",
  "license": "MIT",
  "files": [
    "src"
  ],
  "devDependencies": {
    "@devpodio/plugin": "next",
    "@devpodio/plugin-packager": "next",
    "rimraf": "2.6.2",
    "typescript": "2.9.2",
    "typescript-formatter": "7.2.2"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "format-code": "tsfmt -r",
    "watch": "tsc -watch",
    "compile": "tsc",
    "build": "yarn run format-code && yarn run compile && theia:plugin pack"
  },
  "engines": {
    "theiaPlugin": "next"
  },
  "theiaPlugin": {
    "backend": "lib/lebab-plugin-backend.js"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Lebab configuration",
      "properties": {
        "lebab.onSave": {
          "type": "boolean",
          "default": true,
          "description": "Auto format on save."
        },
        "lebab.showWarnings": {
          "type": "boolean",
          "default": false,
          "description": "Show warnings"
        },
        "lebab.beautify": {
          "type": "boolean",
          "default": true,
          "description": "Enable js-beautify"
        },
        "lebab.transforms": {
          "type": "array",
          "default": [
            "arrow",
            "arg-rest",
            "obj-method",
            "obj-shorthand",
            "class",
            "let",
            "includes",
            "template",
            "for-of",
            "exponent",
            "default-param"
          ],
          "description": "Lebab transform options"
        },
        "lebab.beautify_opts": {
          "type": "object",
          "default": {
            "indent_size": 4,
            "eol": "\n",
            "preserve_newlines": true,
            "max_preserve_newlines": 2,
            "space_after_anon_function": true,
            "brace_style": "collapse,preserve-inline",
            "unindent_chained-methods": true,
            "keep_array_indentation": false
          },
          "description": "Js-beautify options"
        }
      }
    }
  },
  "dependencies": {
    "@types/js-beautify": "^1.8.0",
    "js-beautify": "^1.8.8",
    "lebab": "^3.0.3"
  }
}
